<h2>Edit a product</h2>

<form method="post" action="/products/update?myId=<%= productDetails._id%>">

  <label for="product-name-input">Name: </label>
  <input id="product-name-input" type="text"
  name="productName" value="<%=productDetails.name%>"/><br />
  <label for="product-price-input">Price: </label>
  <input id="product-price-input" type="number" step="0.01"
  name="productPrice" value="<%=productDetails.price%>"/><br />
  <label for="product-image-input">Image:
    <input id="product-image-input" type="url"
    value="<%=productDetails.imageUrl%>" name="productImage"/>
  </label><br />
  <img class="edit-img" src="<%=productDetails.imageUrl%>">
  <br />
  <label for="desc-input">Description: </label><br />
  <textarea id="desc-input" name="productDesc"/>
    <%= productDetails.description %>
  </textarea><br />

<button>Save changes</button>
</form>
